<div class="sideNave col-lg-1 col-md-offset-1" >
  <a href='/authors'>
    <div class="row" style='background-color:rgba(25, 63, 103, 0.48);'>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://fillmurray.com/100/100" alt="...">
          <br>
          <div class="caption">
            <h3>Authors</h3>
          </div>
        </div>
      </div>
    </div>
  </a>
  <a href='/books'>
    <div class="row" >
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="http://fillmurray.com/100/100" alt="...">
        <br>
        <div class="caption">
          <h3>Books</h3>
        </div>
      </div>
    </div>
    </div>
  </a>
</div>
<div class="scroll">

{{#authors}}
  <div class="media col-lg-9 col-lg-offset-1">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="{{this.portrait_url}}" alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading">{{this.lastName}}, {{this.firstName}}</h4>
      <h5 class="list-group-item-text">biography: {{this.biography}}</h5>
      <h5 class="list-group-item-text">books: {{this.title}}</h5>

    </div>
    <div class="media-right">
      <form class="form-group" action="/authors/{{this.author_id}}/delete" method="post">
        <input type="submit" class='btn btn-default' value="delete">
      </form>
      <form class="form-group" action="/authors/{{this.author_id}}/edit" method="get">
        <input type="submit"  class='btn btn-primary' value="edit">
      </form>
    </div>
  </div>
{{/authors}}
</div>
