
<div class="scroll">
{{#authors}}
  <div class="media">
    <div class="media-left">
      <a href="/authors/{{this.id}}">
        <img class="media-object" src="{{this.portrait_url}}" alt="...">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><a href="/authors/{{this.id}}">{{this.last_name}}, {{this.first_name}}</a></h4>
      <h5 class="list-group-item-text">biography: {{this.biography}}</h5>
      <h5 class="list-group-item-text">books: <a href='/books/{{this.book_fk}}'>{{this.title}}</a></h5>

    </div>
    <div class="media-right">
      <form class="form-group" action="/authors/{{this.id}}/delete" method="post">
        <input type="submit" class='btn btn-default' value="delete">
      </form>
      <form class="form-group" action="/authors/{{this.id}}/edit" method="get">
        <input type="submit"  class='btn btn-primary' value="edit">
      </form>
    </div>
  </div>
{{/authors}}
</div>
